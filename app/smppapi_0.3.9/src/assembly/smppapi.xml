<?xml version="1.0" encoding="UTF-8"?>

<assembly>
  <id>smppapi</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>${project.basedir}/**</include>
      </includes>
      <excludes>
        <exclude>${project.build.directory}/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
        <include>*.asc</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
